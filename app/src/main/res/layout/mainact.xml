<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    tools:context=".mainAct">

    <GridView
        android:paddingTop="@dimen/marginTopSmall"
        android:paddingBottom="@dimen/marginTopSmall"
        android:id="@+id/moviesgv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="@dimen/marginTopSmall"
        android:verticalSpacing="@dimen/marginTopSmall"
        android:scrollbars="none"/>
</FrameLayout>